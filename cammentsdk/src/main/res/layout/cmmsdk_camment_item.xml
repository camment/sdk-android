<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cmmsdk_iv_check"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:alpha="0.5"
        android:visibility="gone"
        android:src="@drawable/cmmsdk_check"/>

    <tv.camment.cammentsdk.views.SquareFrameLayout
        android:id="@+id/cmmsdk_sfl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp">

        <tv.camment.cammentsdk.views.SquareImageView
            android:id="@+id/cmmsdk_iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@android:color/black"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/cmmsdk_ll_seen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="end"
            android:visibility="gone"
            android:weightSum="1">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/cmmsdk_red_triangle" />

        </LinearLayout>

        <View
            android:id="@+id/cmmsdk_v_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cmmsdk_rounded_inside_corners" />

    </tv.camment.cammentsdk.views.SquareFrameLayout>

</RelativeLayout>