<?xml version="1.0" encoding="utf-8"?>
<tv.camment.cammentsdk.views.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <tv.camment.cammentsdk.views.SquareImageView
        android:id="@+id/cmmsdk_iv_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:layout_margin="2dp"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/cmmsdk_v_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cmmsdk_rounded_inside_corners" />

</tv.camment.cammentsdk.views.SquareFrameLayout>