<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <Button
        android:id="@+id/cmmsdk_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/cmmsdk_button_ripple"
        android:ellipsize="end"
        android:maxLength="12"
        android:maxLines="1"
        android:padding="16dp"
        android:text="@string/cmmsdk_cancel"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp" />

    <Button
        android:id="@+id/cmmsdk_btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:background="@drawable/cmmsdk_button_ripple"
        android:ellipsize="end"
        android:maxLength="12"
        android:maxLines="1"
        android:padding="16dp"
        android:text="@string/cmmsdk_done"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cmmsdk_rv_friends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cmmsdk_btn_done"
        android:overScrollMode="never" />

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/cmmsdk_cl_progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/cmmsdk_btn_cancel"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp" />

</RelativeLayout>