<?xml version="1.0" encoding="utf-8"?>
<tv.camment.cammentsdk.views.RoundedFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <tv.camment.cammentsdk.views.SquareTextureView
        android:id="@+id/texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</tv.camment.cammentsdk.views.RoundedFrameLayout>