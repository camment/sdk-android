<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="16dp">

    <tv.camment.cammentsdk.views.BoldTextView
        android:id="@+id/cmmsdk_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:textColor="@color/cmmsdk_camment_text_grey"
        android:textSize="16sp" />

    <tv.camment.cammentsdk.views.LightTextView
        android:id="@+id/cmmsdk_tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cmmsdk_tv_title"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:textColor="@color/cmmsdk_camment_text_grey"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cmmsdk_tv_message"
        android:gravity="end"
        android:orientation="horizontal">

        <tv.camment.cammentsdk.views.RegularButton
            android:id="@+id/cmmsdk_btn_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackground"
            android:ellipsize="end"
            android:padding="16dp"
            android:gravity="end"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp" />

        <tv.camment.cammentsdk.views.BoldButton
            android:id="@+id/cmmsdk_btn_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackground"
            android:ellipsize="end"
            android:padding="16dp"
            android:gravity="end"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>