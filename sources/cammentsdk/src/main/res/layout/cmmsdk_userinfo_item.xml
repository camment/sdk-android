<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cmmsdk_iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="4dp"
        android:src="@drawable/cmmsdk_user"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp" />

    <tv.camment.cammentsdk.views.LightTextView
        android:id="@+id/cmmsdk_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/cmmsdk_iv_avatar"
        android:drawablePadding="4dp"
        android:ellipsize="end"
        android:gravity="start"
        android:lines="1"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textColor="@color/cmmsdk_camment_text_grey"
        android:textSize="13sp"
        tools:text="Name Surname" />

    <ImageButton
        android:id="@+id/cmmsdk_ib_remove"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:background="@null"
        android:padding="4dp"
        android:src="@drawable/cmmsdk_block" />

    <View
        android:id="@+id/cmmsdk_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/cmmsdk_tv_name"
        android:alpha="0.7"
        android:background="@color/cmmsdk_camment_divider_grey" />

</RelativeLayout>